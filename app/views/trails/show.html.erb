<body>
<div class="container">
    <div class="card-panel blue-grey lighten-4">
        <span class="grey-text text-darken-3">
        <h4><%= @trail.name%></h4>
        <br>
        <%= @trail.description%>
        </span>
        
    </div>
    <br>
    
    <img class="z-depth-3" src="/images/<%=@trail.image%>" class="responsive-img">
    <br>
    <br>
   
    <div id="container">

    <%if logged_in?%>
        
        <form method="post" action="/trails/<%=@trail.id%>">
        <input type="hidden" name="_method" value="delete">
            <button class="waves-effect waves-light btn" type="submit"><i class="material-icons">delete</i></button>
        </form>
        <br>

        <form method="post" action="/trails/<%=@trail.id%>">
        <input type="hidden" name="_method" value="patch">
            <button class="waves-effect waves-light btn" type="submit"><i class="material-icons">edit</i></button>
        </form>

    <%end%>
       
    </div>
    
    
</div>
</body>





